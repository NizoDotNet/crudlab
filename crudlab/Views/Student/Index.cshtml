@using Entities
@model IEnumerable<Student>

<div class="container">
    <div class="d-flex justify-content-end">
        <a asp-action="Create" class="btn btn-primary">Add</a>
    </div>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Full Name</th>
                    <th>GPA</th>
                    <th>Speciality</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model)
                {
                    <tr>
                        <td>
                            @i.Id
                        </td>
                        <td>
                            <a asp-action="Get" asp-route-id="@i.Id">@($"{i.Name} {i.Surname}")</a>
                        </td>
                        <td>
                            @i.Gpa
                        </td>
                        <td>
                            <a asp-controller="Specialization" asp-action="Get" asp-route-id="@i.SpecializationId">@i.Specialization.Name</a>
                        </td>
                        <td>
                            <a class="btn" asp-action="Update" asp-route-id="@i.Id">Edit</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@i.Id">Delete</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
