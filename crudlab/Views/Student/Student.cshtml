@using Entities
@model Student
<div class="container">

    <p>ID: @Model.Id</p>
    <p>Name: @Model.Name</p>
    <p>Surname: @Model.Surname</p>
    <p>Speciality: <a asp-controller="Specialization" asp-action="Get" asp-route-id="@Model.SpecializationId"></a>@Model.Specialization.Name</p>
    <p>GPA: @Model.Gpa</p>
    <a asp-action="Update" asp-route-id="@Model.Id" class="btn">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    <h5>Grades</h5>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Entry Score</th>
                <th>Exam Score</th>
                <th>Final Score</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var i in Model.Grades)
            {
                <tr>
                    <td>@i.Id</td>
                    <td>@i.Subject.Name</td>
                    <td>@i.EntryScore</td>
                    <td>@i.ExamScore</td>
                    <td>@(i.EntryScore + i.ExamScore)</td>
                </tr>
            }

        </tbody>
    </table>
</div>