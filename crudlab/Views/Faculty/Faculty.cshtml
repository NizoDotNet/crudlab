@using Entities
@model Faculty

<div class="container">
    
        <p>ID: @Model.Id</p>
        <p>Name: @Model.Name</p>
        <a asp-action="Update" asp-route-id="@Model.Id" class="btn">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>

        <h5>Specialities</h5>
        <table class="table">
             <thead>
                 <tr>
                <th>ID</th>
                <th>Name</th>
                 </tr>
                 
             </thead>
             <tbody>
                 @foreach(var i in Model.Specializations)
                {
                    <tr>
                        <th>@i.Id</th>
                        <th><a asp-controller="Specialization" asp-action="Get" asp-route-id="@i.Id">@i.Name</a></th>
                    </tr>
                }
            
            </tbody>
        </table>
</div>
