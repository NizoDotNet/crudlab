@using Entities
@model Faculty

<div class="container">
    <form method="post">
        <input readonly hidden asp-for="Id"/>
        <div class="mb-3">
            <label class="form-label" asp-for="Name"></label>
            <input class="form-control" asp-for="Name" />

        </div>
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary" asp-route-id="Model.Id">Submit</button>
        </div>

    </form>
</div>